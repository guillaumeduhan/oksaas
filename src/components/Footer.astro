---
import Logo from "./Logo.astro";

const column1: any = [];

const column2: any = [];

const column3: any = [];

const column4: any = [];

const columns: any = [column1, column2, column3, column4];
---

<footer class="grid gap-12 w-full bg-transparent text-neutral-400 py-16 px-6">
  <div class="flex items-center gap-2 mx-auto">
    <Logo />
  </div>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-8">
    {
      columns.map((col, i) => (
        <div class="flex flex-col gap-2">
          <h3 class="text-white font-semibold mb-2">
            {["AI Agents", "AI Tools", "AI Development", "AI Research"][i]}
          </h3>
          {col.map(([name, url]) => (
            <a target="blank" href={`${url}?utm_source=okagents`}>
              {name}
            </a>
          ))}
        </div>
      ))
    }
  </div>
  <div class="mt-12 text-center text-neutral-600 text-sm">
    © {new Date().getFullYear()} OkAgents — Curated directory of AI agents & tools.
    Built by <a
      href="https://guillaume.ceo"
      target="_blank"
      rel="noopener"
      class="underline">Guillaume Duhan</a
    >.
  </div>
</footer>
