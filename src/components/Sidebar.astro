---
import DarkMode from "./DarkMode.astro";
import Leaf from "./Leaf.astro";
import Logo from "./Logo.astro";
import Promoted from "./Promoted.astro";
---

<aside class="grid gap-4 lg:gap-12 max-w-full">
  <header
    class="flex items-center justify-between fade-in-up px-4 lg:px-8 mt-8"
  >
    <Logo />
    <div class="flex items-center gap-2">
      <nav class="grow flex items-center justify-center">
        {
          [
            {
              title: "Launch",
              url: "https://codeg.link/oksaas",
            },
            {
              title: "Feature",
              url: "https://codeg.link/oksaas",
            },
            {
              title: "Promote",
              url: "https://codeg.link/oksaas",
            },
          ].map((link: any) => (
            <a class="p-2" href={link.url} target="blank">
              {link.title}
            </a>
          ))
        }
      </nav>
      <DarkMode />
    </div>
  </header>
  <main class="grid gap-4 fade-in-up text-center lg:text-left px-4 lg:px-8">
    <div
      class="mx-auto lg:mx-0 flex items-center justify-center lg:justify-start text-center gap-4 max-w-[280px]"
    >
      <div style="transform: scaleX(-1);">
        <Leaf />
      </div>
      <p class="text-neutral-500 text-sm">
        <span class="font-bold">We're finally live!</span><br />Launch for free!
      </p>
      <div>
        <Leaf />
      </div>
    </div>
    <div class="flex items-center justify-start grid grid-cols-2">
      <a
        href="https://www.producthunt.com/products/oksaas?embed=true&utm_source=badge-featured&utm_medium=badge&utm_source=badge-oksaas"
        target="_blank"
        ><img
          src="https://api.producthunt.com/widgets/embed-image/v1/featured.svg?post_id=1044610&theme=light&t=1764671137437"
          alt="Oksaas - The best products every week | Product Hunt"
          style="width: 250px; height: 54px;"
          width="250"
          height="54"
        /></a
      >
      <a
        href="https://peerlist.io/guillaumeduhan/project/oksaasco"
        target="_blank"
        rel="noreferrer"
        class="scale-75"
      >
        <img
          src="https://peerlist.io/api/v1/projects/embed/PRJH8OELADKJD9B7LH9BJNDJON6ENG?showUpvote=false&theme=dark"
          alt="Oksaas.co"
          style="width: auto; height: 72px;"
        />
      </a>
    </div>
    <h1 class="cal-sans text-5xl">The best products every week</h1>
    <p class="text-xl">
      Discover, compare, and follow the next big SaaS before anyone else.
    </p>
    <div class="flex mx-auto lg:mx-0 mt-4">
      <a
        href="https://codeg.link/oksaas"
        target="blank"
        class="rounded-full bg-linear-to-r from-kiwi-300 to-kiwi-600 p-1"
      >
        <button
          class="flex items-center gap-1 font-[500] px-4 py-3 cursor-pointer bg-kiwi-600 rounded-full text-white"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            ><!-- Icon from Material Symbols by Google - https://github.com/google/material-design-icons/blob/master/LICENSE -->
            <path fill="currentColor" d="M11 13H5v-2h6V5h2v6h6v2h-6v6h-2z"
            ></path></svg
          >
          <span>New Launch (free)</span>
        </button>
      </a>
    </div>
  </main>
  <footer class="px-2 sm:px-0 lg:px-8 w-full max-w-[576px] mx-auto lg:pb-0">
    <Promoted />
  </footer>
  <!-- <Video /> -->
</aside>
