---

<div
  class="cursor-pointer opacity-90"
  onclick="toggleDark()"
  id="dark-toggle"
  is:client
>
  <span id="dark-icon"></span>
</div>

<script is:client>
  const STORAGE_KEY = "dark-mode";
  let dark = true;

  function loadState() {
    const saved = localStorage.getItem(STORAGE_KEY);
    if (saved === "true") dark = true;
  }

  function applyTheme() {
    const html = document.documentElement;
    const icon = document.getElementById("dark-icon");
    if (!icon) return;

    if (dark) {
      html.classList.add("dark");
      icon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 64 64"><!-- Icon from Lineicons by Lineicons - https://github.com/LineiconsHQ/Lineicons/blob/main/LICENSE.md --><path fill="currentColor" d="M32 18.4c-7.5 0-13.6 6.1-13.6 13.6S24.5 45.6 32 45.6S45.6 39.5 45.6 32S39.5 18.4 32 18.4m0 22.7c-5 0-9.1-4.1-9.1-9.1s4.1-9.1 9.1-9.1s9.1 4.1 9.1 9.1s-4.1 9.1-9.1 9.1m0-29.8c1.2 0 2.3-1 2.3-2.3V4c0-1.2-1-2.3-2.3-2.3c-1.2 0-2.3 1-2.3 2.3v5.1c.1 1.2 1.1 2.2 2.3 2.2m0 41.4c-1.2 0-2.3 1-2.3 2.3v5c0 1.2 1 2.3 2.3 2.3c1.2 0 2.3-1 2.3-2.3v-5.1c0-1.2-1.1-2.2-2.3-2.2M48.3 18c.6 0 1.2-.2 1.6-.7l3.2-3.2c.9-.9.9-2.3 0-3.2s-2.3-.9-3.2 0l-3.2 3.2c-.9.9-.9 2.3 0 3.2c.4.5 1 .7 1.6.7M14.2 46.7L11 49.8c-.9.9-.9 2.3 0 3.2c.4.4 1 .7 1.6.7s1.2-.2 1.6-.7l3.2-3.2c.9-.9.9-2.3 0-3.2c-.9-.8-2.4-.8-3.2.1M60 29.8h-5.1c-1.2 0-2.3 1-2.3 2.3c0 1.2 1 2.3 2.3 2.3H60c1.2 0 2.3-1 2.3-2.3s-1.1-2.3-2.3-2.3M11.3 32c0-1.2-1-2.3-2.3-2.3H4c-1.2 0-2.3 1-2.3 2.3c0 1.2 1 2.3 2.3 2.3h5.1c1.2 0 2.2-1.1 2.2-2.3m38.5 14.7c-.9-.9-2.3-.9-3.2 0s-.9 2.3 0 3.2l3.2 3.2c.4.4 1 .7 1.6.7s1.2-.2 1.6-.7c.9-.9.9-2.3 0-3.2zM14.2 11c-.9-.9-2.3-.9-3.2 0s-.9 2.3 0 3.2l3.2 3.2c.4.4 1 .7 1.6.7s1.2-.2 1.6-.7c.9-.9.9-2.3 0-3.2z"/></svg>`;
    } else {
      html.classList.remove("dark");
      icon.innerHTML = `<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"><!-- Icon from Google Material Icons by Material Design Authors - https://github.com/material-icons/material-icons/blob/master/LICENSE --><path fill="currentColor" d="M12 3a9 9 0 1 0 9 9c0-.46-.04-.92-.1-1.36a5.39 5.39 0 0 1-4.4 2.26a5.403 5.403 0 0 1-3.14-9.8c-.44-.06-.9-.1-1.36-.1"/></svg>`;
    }
  }

  function toggleDark() {
    dark = !dark;
    localStorage.setItem(STORAGE_KEY, dark);
    applyTheme();
  }

  // On mount
  loadState();
  applyTheme();
</script>
