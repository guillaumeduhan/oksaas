---
import "../globals.css";
import Header from "../src/components/Header.astro";

const title =
  "Oksaas — Discover the Best New SaaS Products Before Everyone Else";
const description =
  "Oksaas is the curated directory of emerging SaaS products. Discover, compare, and follow the next big thing before anyone else — and publish your SaaS for free during launch.";
const url = "https://oksaas.co";
const image = `${url}/og-image.jpg`; // 1200x630 recommended
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="saas directory, discover saas, new saas products, emerging software tools, startup tools, trending saas, software discovery, best new apps"
    />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow" />

    <!-- Canonical -->
    <link rel="canonical" href={url} />

    <!-- Hreflang -->
    <link rel="alternate" hreflang="en" href={url} />

    <!-- Favicons -->
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    <meta property="og:site_name" content="Oksaas" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter / X -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={image} />
    <meta name="twitter:creator" content="@oksaas" />

    <!-- Open Graph Image -->
    <meta property="og:image" content="https://oksaas.com/twitter-image.jpg" />

    <!-- Twitter Image -->
    <meta name="twitter:image" content="https://oksaas.com/twitter-image.jpg" />

    <!-- JSON-LD: SaaS directory -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Oksaas",
        "url": "https://oksaas.co",
        "description": "Curated directory of emerging SaaS products.",
        "publisher": {
          "@type": "Organization",
          "name": "Oksaas",
          "logo": {
            "@type": "ImageObject",
            "url": "https://oksaas.co/logo.png"
          }
        },
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://oksaas.co/search?q={search_term_string}",
          "query-input": "required name=search_term_string"
        },
        "sameAs": ["https://x.com/oksaas"]
      }
    </script>

    <!-- JSON-LD: Directory / ItemList -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ItemList",
        "name": "SaaS Products Directory",
        "url": "https://oksaas.co",
        "itemListOrder": "Descending",
        "description": "Discover the best emerging SaaS tools and apps."
      }
    </script>

    <!-- Theme -->
    <meta name="theme-color" content="#10b981" />

    <!-- Privacy-friendly analytics by Plausible -->
    <script async src="https://plausible.io/js/pa-NZVRr75V_CLz7MtN6izt5.js"
    ></script>
    <script>
      ((window.plausible =
        window.plausible ||
        function () {
          (plausible.q = plausible.q || []).push(arguments);
        }),
        (plausible.init =
          plausible.init ||
          function (i) {
            plausible.o = i || {};
          }));
      plausible.init();
    </script>
  </head>

  <body class="relative grid">
    <Header />
    <div class="fade-in-up-2 max-w-2xl mx-auto">
      <slot />
    </div>
  </body>
</html>
